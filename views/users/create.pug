html
  head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
  body
    nav(class="navbar navbar-light bg-faded")
    ul.nav.nav-tabs
      li(role='presentation')
        a(href='/') Ajax DB App
      li.active(role='presentation')
        a(href='/create') Create
      li(role='presentation')
        a(href='/form') Search
    
  .container
    .row
      .col-xs-6.offset-xs-3
        h1.text-xs-center Add a New User
        hr
        form(action='/addNew' method='post')
          .form-group
            label First Name:
            input(type="text" name='firstname' placeholder="Bakkie" class="form-control")
          .form-group
            label Last Name:
            input(type="text" name="lastname" placeholder="Baksma" class="form-control")
          .form-group
            label Email:
            input(type="email" name="email" placeholder="bakkerbaksma@fryslan.com" class="form-control")
          .form-group
            button(type="submit" class="btn btn-success btn-lg btn-") Add User
